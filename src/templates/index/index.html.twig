  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">crt-symfony-3</h1>
        <p class="lead text-muted">My third homework project</p>
        <p>
          <a href="#" class="btn btn-primary my-2">Об авторе</a>
          <a href="#" class="btn btn-secondary my-2">Блог</a>
        </p>
      </div>
    </div>
  </section>

  <div class=" album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
       {# {% for article in articles %}              #}
        <div class="col mb-2">
        <div class="card shadow-sm p-2"> 
               {# <p class="card-text">Title: {{ article.title }}</p> #}
               {# <p class="card-text">Text: {{ article.text }}</p>   #}
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
