{% extends 'base.html.twig' %}


{% block title %}crt-symfony-3{% endblock %}

{% block body %}
  
  

  {% block main %}
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">crt-symfony-3</h1>
            <p class="lead text-muted">My third homework project</p>
            <p>
              <a href="/about" class="btn btn-primary my-2">Об авторе</a>
              <a href="/article" class="btn btn-secondary my-2">Блог</a>
            </p>
          </div>
        </div>
      </section>

      <div class=" album py-5 bg-light">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-xl-3 g-3">
          {% for new in news %}             
            <div class="col ">
            <div class="card shadow-sm p-2 card-height"> 
                  <p class="card-text">Новость:  {{ new.title }}</p>
                  <p class="card-text">Описание:  {{ new.description }}</p>  
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary"><a href="news/{{ new.id}}" class="text-decoration-none btn-sm btn-outline-secondary">Подробнее</a></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">{{ new.id}}</button>
                    </div>
                  
                  </div>
                </div>
              </div>
            </div>
            {% endfor %}  
          </div>
        </div>
      </div> 
  {% endblock %}

  
  
{% endblock %}

